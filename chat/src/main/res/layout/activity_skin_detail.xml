<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:id="@+id/ll_activity_skin_detail_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.commonlibrary.customview.WrappedViewPager
        android:id="@+id/vp_activity_skin_detail_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@color/custom_color_app_content_bg"
        android:gravity="center"
        android:orientation="vertical"
        skin:enable="true">

        <TextView
            android:id="@+id/tv_activity_skin_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浪漫爱情"
            android:textColor="@color/custom_color_text_main"
            android:textSize="18sp" />


        <Button
            android:id="@+id/btn_activity_skin_detail_download"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_login_selector"
            android:gravity="center"
            android:text="下载并使用"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>