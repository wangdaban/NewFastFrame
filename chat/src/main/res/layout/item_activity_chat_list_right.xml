<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_activity_chat_list_right_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="2017-10-20"
        android:textColor="@color/grey_500"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.commonlibrary.customview.RoundAngleImageView
            android:id="@+id/riv_item_activity_chat_list_right_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/riv_item_activity_chat_list_right_avatar"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_activity_chat_list_right_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统"
                android:textColor="@color/blue_500" />

            <TextView
                android:id="@+id/tv_item_activity_chat_list_right_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="内容" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>